<h1>Restaurants List</h1>
<% @restaurants.each do |restaurant| %>
  <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
  <p><%= restaurant.address %></p>
  <p><%= link_to 'Delete', restaurant_path(restaurant),method: :delete, data: { confirm: "Delete this Restaurant form the List ?" } %></p>
<% end %>
<h2><%= link_to "Add a new Restaurant", new_restaurant_path(@restaurants) %></h2>
